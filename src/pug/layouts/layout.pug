mixin title($page)
    title Szabó Martin - #{$page}

mixin menu(selected)
    - const menuData = [{"text": "Főoldal", "link": "index.html"},{"text": "Projektek", "link": "projects.html"}, {"text": "Linkek", "link": "links.html"}]

    each menu in menuData
        if selected == menu.text
            a.item.active(href=menu.link) #{menu.text}
        else
            a.item(href=menu.link) #{menu.text}

mixin bread(page)
    .ui.breadcrumb
        a.section(href="/projects.html") Projektek
        i.right.angle.icon.divider
        div.section.active #{page}

mixin label(icon, text)
    div.ui.label.small
        i.icon(class=`${icon}`)
        span #{text}

